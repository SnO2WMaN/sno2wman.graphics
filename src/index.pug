-const $title = "SnO2WMaN.GRAPHICS"
-const $description = "SnO2WMaNのウェブサイト"
-const $image = "https://www.gravatar.com/avatar/9a828752a7771c3bf43e3bea39d9cf57?s=512"

doctype html
html(lang="jp")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		meta(name="google" contents="notranslate")
		meta(name="description" contents=$description)

		meta(property="og:title" contents=$title)
		meta(property="og:locate" contents="ja_JP")
		meta(property="og:type" contents="website")
		meta(property="og:description" contents=$description)
		meta(property="og:url" content="https://sno2wman.graphics")
		meta(property="og:site_name" content=$title)
		meta(property="og:image" content=$image)

		meta(name="twitter:card" content="summary")
		meta(name="twitter:site" content="@SnO2WMaN")
		meta(name="twitter:creator" content="@SnO2WMaN")
		meta(name="twitter:title" content=$title)
		meta(name="twitter:description" content=$description)

		link(type="image/png", href=$image, rel="shortcut icon")
		title #{$title}
	body
		#frame
			.top
			.left
			.bottom
			.right
		#canvas-placeholder
		canvas#canvas
		#bottom-deco
			.inner
			.inner
			.inner
			.inner
		#top-nav
			.selected
			ul.menu
				li(data-target="home")
					.text-wrap
						span.text HOME
				li(data-target="profile")
					.text-wrap
						span.text ABOUT
				li(data-target="works")
					.text-wrap
						span.text WORKS
				li(data-target="voxels")
					.text-wrap
						span.text VOXELS
				li(data-target="contact")
					.text-wrap
						span.text CONTACT
				li(data-target="system")
					.text-wrap
						span.text SYSTEM
		#left-nav
			.wrap.top
				.icon-wrap.site
					i.icon.logo-site
				.icon-wrap.me
					i.icon.sno2wman
			.wrap.bottom
				.text-wrap
					p.text &copy; 2018 SnO2WMaN.GRAPHICS
					p.text ALL RIGHT RESERVED.
		#main
			include pages/home
			include pages/profile
			include pages/voxels
			include pages/works
			include pages/contact
			include pages/system
