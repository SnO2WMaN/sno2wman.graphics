mixin split($text)
	each $char in $text.split("")
		span #{$char}

#profile
	.bg
		.pattern
	.card
		.social
			canvas
			ul.links
				-
					$links = {
						twitter:"https://twitter.com/SnO2WMaN",
						steam:"https://steamcommunity.com/id/SnO2WMaN",
						github:"https://github.com/SnO2WMaN",
						tumblr:"https://sno2wman.tumblr.com",
						twitch:"https://www.twitch.tv/sno2wman",
						spotify:"https://open.spotify.com/user/sno2wman",
						codepen:"https://codepen.io/SnO2WMaN"
					}
					$copies = {
						discord:"SnO2WMaN#9459"
					}
				each $link,$social in $links
					li(class=$social)
						a.link(href=$link target="_blank")
						.icon-wrap
							i.fab(class="fa-"+$social)
						.guide
							i.fas.fa-external-link-alt
				each $copy,$social in $copies  
					li.clipboard(class=$social data-clipboard-text=$copy)
						.icon-wrap
							i.fab(class="fa-"+$social)
						.guide
							i.fas.fa-clipboard
				li.mail
					a.link(href="mailto:sno2wman.official@gmail.com")
					.icon-wrap
						i.fas.fa-envelope
					.guide
						i.fas.fa-external-link-alt
		.prof
			.top
				.covers
					.cover
					.cover
				p SnO2WMaN
				p Webdesigning Machine
				p Made In 2001
			.bottom
				canvas
				section.description
					h1.title 
						+split("DESCRIPTION")
					.text
						p ナード的活動をしています。
						p 	
							|ウェブデザインをしたり、
							br
							|ボクセルを作っています。
						p 
							|飲食物の中では
							br
							|ペプシが最も好きです。
						p 	
							|ボクセルでのお仕事や、
							br
							|ウェブ制作の仕事を
							br
							|募集しています。
						p 
							|成果物はTumblrやTwitterを
							br
							|参考にしてください。
				section.details
					h1.title
						+split("DETAILS")
					ul
						-
							$details={
								gender:["Male","mars"],
								age:["17","clock"],
								birthday:["2001.06.22","birthday-cake"],
								live:["Japan,Nagoya","umbrella-beach"],
								religion:["Pastafarianism","pastafarianism"],
							}
						each $detail,$detailName in $details
							li(class=$detailName)
								.left
									.icon-wrap
										i.fas.fa-fw(class="fa-"+$detail[1])
									p #{$detailName.toUpperCase()}
								.right
									p #{$detail[0]}
				section.donation
					h1.title
						+split("DONATION")
					ul.wishlists
						li.amazon
							a(href="http://amzn.asia/3su4rbU" target="_blank")
							.icon-wrap
								i.fab.fa-amazon
							p 欲しいものリスト
						li.steam
							a(href="https://store.steampowered.com/wishlist/id/SnO2WMaN" target="_blank")
							.icon-wrap
								i.fab.fa-steam
							p ウィッシュリスト