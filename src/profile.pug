extends _layout.pug

block head
  link(href="./styles/bundle.scss", rel="stylesheet")
  title Profile

block contents
  #barba-wrapper
    .barba-container(data-namespace="profile")    
      header        
        .guide-wrap
          p SCROLL DOWN
        .image-wrap
          .covers
            .cover
            .cover
            .cover
          picture.image
            source(type="image/webp" srcset="./images/profile.webp")
            img(src="./images/profile.jpeg")
        .icon-wrap
          .covers
            .cover
            .cover
          picture.icon
            source(type="image/webp" srcset="./images/icon.webp")
            img(src="./images/icon.png")
        .contents
          .title-wrap
            h1 
              each $char in "SnO2WMaN".split("")
                span #{$char}
          .subtitles-wrap
            h2 A Webdesigner
            h2 In Japan
            h2 Born in 2001
      section
        .cards
          .card.sizer
          .card.profile.x2
            .title-wrap
              h2 PROFILE
              h3 こいつはこんなやつ
            .contents
              .explain
                .icon-wrap
                  picture.icon
                    source(type="image/webp" srcset="./images/me.webp")
                    img(src="./images/me.jpg")
                .text-wrap
                  p ナード的活動をしている無軌道な学生
                  p ウェブデザイン、ボクセルなどをしています
                  p 飲食物ではペプシコーラが好きです
                  p 文章を書いたり会話を行うのがヘタクソ
              ul.details                  
                li.detail.gender
                  .icon-wrap
                    i.fas.fa-mars
                  .title-wrap
                    p GENDER
                  .data-wrap
                    p MALE
                li.detail.birthday
                  .icon-wrap
                    i.fas.fa-birthday-cake
                  .title-wrap
                    p BIRTHDAY
                  .data-wrap
                    p 2001.06.22
                li.detail.age
                  .icon-wrap
                    i.fas.fa-clock
                  .title-wrap
                    p AGE
                  .data-wrap
                    p 17
                li.detail.live
                  .icon-wrap
                    i.fas.fa-umbrella-beach
                  .title-wrap
                    p LIVE
                  .data-wrap
                    p Japan &gt; Aichi &gt; Nagoya
                li.detail.live
                  .icon-wrap
                    i.fas.fa-pastafarianism
                  .title-wrap
                    p RELIGION
                  .data-wrap
                    p Pastafarianism
          .card.skillset.x2
            .title-wrap
              h2 SKILLSET
              h3 ﾁｮｯﾄﾃﾞｷﾙ
            .contents
              -
                $skills = {
                  html:["HTML","HTML5","Pug"],
                  css:["CSS","SCSS","PostCSS"],
                  javascript:["JavaScript","Babel","TypeScript","node.js"],
                  tools:["Browserslist"],
                  build:["Webpack","Parcel"],
                  deploy:["Netlify"],
                  lint:["ESLint","Prettier","Stylelint","EditorConfig"],
                  versioning:["Git","GitKraken"],
                  editor:["VSCode"],
                  design:["Affinity Designer","Affinity Photo"],
                }
                $genreIcon = {
                  html:["html5",true],
                  css:["css3",true],
                  javascript:["js",true],
                  framework:"cogs",
                  build:"building",
                  tools:"toolbox",
                  lint:"broom",
                  versioning:"code-branch",
                  design:"pencil-alt",
                  editor:"code",
                  deploy:"rocket"
                }
              ul.genres
                each $genre,$genreName in $skills
                  li.genre(class=$genreName)
                    .icon-wrap
                      if(Array.isArray($genreIcon[$genreName]))
                        i.fab(class="fa-"+$genreIcon[$genreName][0])
                      else
                        i.fas(class="fa-"+$genreIcon[$genreName])
                    .title-wrap
                      p #{$genreName.toUpperCase()}
                    ul.skills
                      each $skill in $genre
                        li.skill
                          p #{$skill}
          .card.socials
            .title-wrap
              h2 SOCIAL
              h3 ここにいるぞ！
            .contents
              ul.socials
                -
                  $links = {
                    twitter:"https://twitter.com/SnO2WMaN",
                    github:"https://github.com/SnO2WMaN",
                    tumblr:"https://sno2wman.tumblr.com",
                    steam:"https://steamcommunity.com/id/SnO2WMaN",
                    twitch:"https://www.twitch.tv/sno2wman",
                    spotify:"https://open.spotify.com/user/sno2wman",
                    mastodon:"https://mstdn.jp/@SnO2WMaN",
                    codepen:"https://codepen.io/SnO2WMaN"
                  }
                  $copies = {
                    discord:"SnO2WMaN#9459"
                  }
                each $link,$social in $links
                  li(class=$social)
                    a(href=$link target="_blank")
                    .icon-wrap
                      i.fab(class="fa-"+$social)
                    .text-wrap
                      p #{$social.charAt(0).toUpperCase()}#{$social.substring(1)}
                      .icon
                        i.fas.fa-external-link-alt
                each $copy,$social in $copies  
                  li.copy(class=$social data-clipboard-text=$copy)
                    .icon-wrap
                      i.fab(class="fa-"+$social)
                    .text-wrap
                      p #{$social.charAt(0).toUpperCase()}#{$social.substring(1)}
                      .icon
                        i.fas.fa-copy
          .card.playlist
            .title-wrap
              h2 PLAYLIST
              h3 こういう音楽が好き
            .contents
              ul.playlists
                -
                  $playlists = {
                    chill:["Chill",["Future Bass","Glitch Hop"],"https://open.spotify.com/user/sno2wman/playlist/79ZtfjWCNJNRPpE8WyUuny?si=lYAi15QXS1aXYaFg9idWaA"],
                    loud:["Loud",["Dubstep","Riddim","Trap"],"https://open.spotify.com/user/sno2wman/playlist/5ReAR9tFAEBrKDvRobOwMq?si=xAPPnkjUR0mB28NKQs0WJw"]
                  }
                each $playlist,$name in $playlists
                  li.playlist(class=$name)
                    a.link(href=$playlist[2] target="_blank")
                    .icon
                      i.fab.fa-spotify
                    .image-wrap      
                      picture.image
                        source(type="image/webp" srcset="./images/playlists/"+$name+".webp")
                        img(src="./images/playlists/"+$name+".png")
                    .texts-wrap
                      h2.title #{$playlist[0]}
                      h3.genre
                        each $tag in $playlist[1]
                          span #{$tag}
          .card.donation
            .title-wrap
              h2 DONATE
              h3 恵まれない子供のために
            .contents
              ul.choises
                -
                  $choises = {
                    amazon:["Amazon Wishlist","物質","https://www.amazon.co.jp/hz/wishlist/dl/invite/3aFrzX5"],
                    steam:["Steam Wishlist","ゲーム","https://steamcommunity.com/id/SnO2WMaN/wishlist"],
                  }
                each $choise,$name in $choises
                  li.choise(class=$name)
                    a.link(href=$choise[2] target="_blank")
                    .icon-wrap
                      i.fab(class="fa-"+$name)
                    .texts-wrap
                      h2 #{$choise[0]}
                      h3 #{$choise[1]}
